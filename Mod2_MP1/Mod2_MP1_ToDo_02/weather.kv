#import js json
#set data json()
<WeatherDisplay>:
    minimum_height:40
    canvas.before:
        Color:
            rgba:(1,1,1,1)
        Rectangle:
            size:self.size
            pos:self.pos
    BoxLayout:
        orientation:'horizontal'
        AsyncImage:
            source:'http://openweathermap.org/img/wn/'+app.icon+'@2x.png'
        Label:
            text_size:self.size
            text:'[color=#000000]'+app.temp+'[/color]'
            markup:True
            halign:'left'
            valign:'top'
            font_size:30
            
    
        BoxLayout:
            orientation:'vertical'
        BoxLayout:
            orientation:'vertical'
            Label:
                text_size:self.size
                text:'[color=#000000]Manila, Metro Manila[/color]'
                markup:True
                halign:'right'
                valign:'top'
                font_size:20
            Label:
                text_size:self.size
                text:'[color=#000000]Friday 4:00 PM[/color]'
                markup:True
                halign:'right'
                valign:'top'
            Label:
                text_size:self.size
                text:'[color=#000000]Cloudy[/color]'
                markup:True
                halign:'right'
                valign:'top'